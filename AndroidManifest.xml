<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="it.polimi.mobilecourse.expenses"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="14" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="21" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="21" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".HomeTutor"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name=".LandingActivity"
            android:theme="@style/Landing" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>



        </activity>
        <activity android:name=".ProvaUni" />
        <activity android:name=".HelpActivity" />
        <activity android:name=".LoginStudente"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:windowSoftInputMode="stateHidden"
            android:label="Login Studente"
            />
        <activity android:name=".LoginTutor" />
        <activity
            android:name=".RegistrationStudent"
            android:windowSoftInputMode="stateHidden"
            android:theme="@style/AppTheme"
            android:label="Nuovo studente"/>
        <activity
            android:name=".HomeStudent"
            android:theme="@style/Theme.AppCompat.Light">
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchResultsActivity" />

        </activity>
        <activity android:name=".LoginFBActivity" />
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name"/>
        <activity
            android:name=".DataActivityStudent"
            android:label="Completa il profilo" >
        </activity>
        <activity
            android:name=".HelpABActivity"
            android:label="@string/title_activity_help_ab" >
        </activity>
        <activity android:name=".NuovaRichiestaActivity"
            android:theme="@style/Base.Theme.AppCompat.Light"
            android:parentActivityName=".HomeStudent">

        </activity>
        <activity android:name =".SearchResultActivity"
            android:label="@string/title_activity_search_results">

            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />

        </activity>
    </application>

</manifest>
