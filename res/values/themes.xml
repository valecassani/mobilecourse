<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- the theme applied to the application or activity -->
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="searchViewStyle">@style/MySearchViewStyle</item>
    </style>

    <color name="custom_theme_color">#A3FAF4</color>
    <color name="bottomcolor">#ff995b09</color>
    <color name="midcolor">#ff219940</color>
    <color name="topcolor">#ff998c12</color>
    <color name="underbar">#ff99993e</color>
    <color name="cont">#ff991d70</color>
    <color name="sfondo">#ff118a99</color>


    <style name="NewOperationBarTheme"
           parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
           >
        <item name="android:background">#993300</item>
    </style>

     <style name="Landing" parent="@android:style/Theme.Holo.NoActionBar.Fullscreen">
     <item name="android:windowBackground">@color/primaryColor</item>

     </style>



    <style name="LoginSBarTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/ActionBarS</item>
    <item name="android:windowBackground">@color/custom_theme_color</item>
    </style>

    <style name="LoginTBarTheme" parent="@android:style/Theme.Holo.Light">
    <item name="android:actionBarStyle">@style/ActionBarT</item>
    <item name="android:windowBackground">@color/custom_theme_color</item>
    </style>

    <style name="ActionBarS" parent="@android:style/Widget.Holo.Light">
     <item name="android:label">@string/login_st</item>
     </style>


    <style name="ActionBarT"
        parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
