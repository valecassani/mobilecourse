<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="840dp"
            >

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="Nome"
                android:id="@+id/nameT"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Cognome"
                android:ems="10"
                android:id="@+id/surnameT"
                android:layout_alignTop="@+id/nameT"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="right"
                android:layout_weight="0.04"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Indirizzo"
                android:id="@+id/addressT"


                android:layout_below="@+id/etaT"
                android:layout_alignLeft="@+id/etaT"
                android:layout_alignRight="@+id/etaT" />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/cellT"
                android:hint="Cellulare"
                android:layout_below="@+id/nameT"
                android:layout_toRightOf="@+id/textView6" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCitta"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dialog"
                android:layout_above="@+id/textView6"
                android:layout_alignRight="@+id/surnameT" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerUni"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"


                android:spinnerMode="dialog"
                android:clickable="true"
                android:layout_above="@+id/editTextFac"
                android:layout_alignRight="@+id/surnameT" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Dove vivi?"
                android:id="@+id/textView5"
                android:layout_alignTop="@+id/spinnerCitta"
                android:layout_alignLeft="@+id/nameT"
                android:layout_marginTop="-40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Università"
                android:id="@+id/textView6"
                android:layout_above="@+id/spinnerUni"
                android:layout_alignRight="@+id/textView5" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salva"
                android:id="@+id/updateT"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />



            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarT"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:id="@+id/editTextFac"
                android:text="Facoltà"
                android:layout_above="@+id/spinnerFac"
                android:layout_alignLeft="@+id/textView5" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerFac"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"


                android:spinnerMode="dialog"
                android:clickable="true"
                android:layout_above="@+id/updateT"
                android:layout_alignParentLeft="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="Età"
                android:ems="10"
                android:id="@+id/etaT"
                android:layout_below="@+id/cellT"
                android:layout_alignLeft="@+id/cellT" />

            <EditText
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:hint="Esperienze universitarie"
            android:ems="10"
            android:id="@+id/espUniT"
            android:layout_below="@+id/occT"
            android:layout_alignLeft="@+id/occT" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:hint="Esperienze da tutor"
                android:ems="10"
                android:id="@+id/espT"
                android:layout_below="@+id/espUniT"
                android:layout_alignLeft="@+id/occT" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:hint="Occupazione"
                android:id="@+id/occT"
                android:layout_below="@+id/addressT"
                android:layout_toRightOf="@+id/textView5"
                android:layout_alignRight="@+id/addressT">

            </EditText>

        </RelativeLayout>
    </LinearLayout>

</ScrollView>