<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"


    >
    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:weightSum="1">

        <RelativeLayout  android:layout_width="match_parent"
            android:layout_height="609dp"
            >


            <com.pkmmte.view.CircularImageView

                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/studface"
                android:layout_alignTop="@+id/textNome"
                android:layout_centerHorizontal="true" />



            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/title"
                android:layout_below="@+id/studface"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/puntualita"
                android:id="@+id/textView21"
                android:layout_marginTop="42dp"
                android:layout_below="@+id/title"
                android:layout_alignLeft="@+id/textView22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:id="@+id/textNome"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/puntualMostra"
                android:clickable="false"
                android:isIndicator="true"
                android:layout_below="@+id/textView21"
                android:layout_alignLeft="@+id/textView21" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/disp"
                android:id="@+id/textView22"
                android:layout_below="@+id/puntualMostra"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dispMostra"
                android:clickable="false"
                android:isIndicator="true"
                android:layout_below="@+id/textView22"
                android:layout_alignLeft="@+id/textView22" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/chiar"
                android:id="@+id/textView23"
                android:layout_below="@+id/dispMostra"
                android:layout_alignLeft="@+id/dispMostra" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:isIndicator="true"
                android:id="@+id/chiarMostra"
                android:layout_below="@+id/textView23"
                android:layout_alignLeft="@+id/textView23" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/finalmark"
                android:id="@+id/textView24"
                android:layout_below="@+id/chiarMostra"
                android:layout_alignLeft="@+id/chiarMostra" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/finaleMostra"
                android:clickable="false"
                android:isIndicator="true"
                android:layout_below="@+id/textView24"
                android:layout_alignLeft="@+id/textView24" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/comment"
                android:id="@+id/textView25"
                android:layout_below="@+id/finaleMostra"
                android:layout_alignLeft="@+id/finaleMostra" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commentMostra"
                android:layout_below="@+id/textView25"
                android:layout_alignLeft="@id/textView25"
                android:layout_alignRight="@+id/finaleMostra" />


    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBarRecensione"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/studface" />


        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

