<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:float="http://schemas.android.com/apk/res-auto">


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="999dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="959dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:weightSum="1"
                android:id="@+id/linearLayout4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="90dp">

                    <EditText
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"

                        android:inputType="text"
                        android:hint="Nome"
                        android:id="@+id/nameS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-56dp"
                    android:layout_marginRight="-100dp"
                    android:layout_marginLeft="-10dp">

                    <EditText
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:inputType="text"
                        android:hint="Cognome"
                        android:id="@+id/surnameS"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="-43dp" />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>




                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/mail_32"
                        android:inputType="textEmailAddress"
                        android:hint="Mail"
                        android:id="@+id/mailS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>








                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="50dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/mobile_32"
                        android:inputType="phone"
                        android:hint="Cellulare"
                        android:id="@+id/cellS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/citta"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/textView5"

                    android:layout_marginTop="40dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerCitta"
                    android:saveEnabled="true"
                    android:drawSelectorOnTop="true"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/uni"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/textView6"
                    android:layout_marginTop="20dp"

                    />



                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerUni"
                    android:saveEnabled="true"
                    android:drawSelectorOnTop="true"


                    android:spinnerMode="dialog"
                    android:clickable="true"
                    android:layout_marginTop="10dp"
                    />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/editTextFac"
                    android:text="@string/fac"
                    android:layout_marginTop="20dp"
                    />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerFac"
                    android:saveEnabled="true"
                    android:drawSelectorOnTop="true"


                    android:spinnerMode="dialog"
                    android:clickable="true"
                    android:layout_above="@+id/updateS"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"

                    />

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/lock_32"
                        android:inputType="textPassword"
                        android:hint="Password"
                        android:id="@+id/passS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/lock_32"
                        android:inputType="textPassword"
                        android:hint="Ripeti Password"
                        android:id="@+id/pass2S"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_128"
                    android:alpha="0.3"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-500dp" />

                <Button
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="Registrati"
                    android:id="@+id/regS"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/smooth_button"
                    android:layout_marginBottom="84dp"
                    android:layout_marginTop="499dp"
                    android:layout_gravity="center_horizontal" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="70dp"
                    android:text="@string/accept_term"
                    android:id="@+id/checkBox"
                    android:textColor="@color/primaryColor"
                    android:checked="false"

                    android:layout_marginTop="-210dp" />



                <ProgressBar
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:id="@+id/progressBarRS"
                    style="?android:attr/progressBarStyleLarge"

                    android:layout_gravity="center_horizontal"

                    android:visibility="gone"
                    android:layout_marginTop="-40dp"
                    />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>