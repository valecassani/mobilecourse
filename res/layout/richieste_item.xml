<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView

        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/bullhorn_icon"
        android:id="@+id/megaphone"




        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/testoRichiesta"
        android:layout_toRightOf="@id/megaphone"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/testoRichiesta"
        android:layout_toRightOf="@id/megaphone"

        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Entro il:"
        android:id="@+id/data_entro_title"
        android:layout_row="0"
        android:layout_column="2"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/data_entro_title"
        android:layout_below="@id/testoRichiesta"

        android:layout_margin="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/data_entro_value"
        android:layout_row="1"
        android:layout_column="2" />
</RelativeLayout>