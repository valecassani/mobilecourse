<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.pkmmte.view.CircularImageView
        android:layout_centerVertical="true"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="8dp"
        app:border="true"
        app:border_color="#000"
        app:border_width="4dp"
        app:shadow="true"
        app:backgroundTint="@color/material_blue_500"
        android:id="@+id/list_tutor_image"/>


    <TextView
        android:layout_toRightOf="@id/list_tutor_image"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:id="@+id/list_tutor_nome"/>



    <TextView
        android:layout_toRightOf="@id/list_tutor_image"
        android:layout_below="@id/list_tutor_nome"
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="match_parent"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:id="@+id/list_tutor_uni"/>



    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:id="@+id/list_tutor_media"
        android:layout_alignTop="@+id/list_tutor_nome"
        android:layout_alignRight="@+id/list_tutor_nome"
        android:layout_marginRight="31dp" />







</RelativeLayout>