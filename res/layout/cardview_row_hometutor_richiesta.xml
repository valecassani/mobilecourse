<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardCornerRadius="10dp"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="5dp"
    android:focusable="true"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#d8d8d8">
        <com.pkmmte.view.CircularImageView
            android:layout_centerVertical="true"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_margin="8dp"
            app:border="true"
            app:border_color="#000"
            app:border_width="4dp"
            app:shadow="true"
            app:backgroundTint="@color/material_blue_500"
            android:id="@+id/richiesta_image"/>


        <TextView
            android:layout_toRightOf="@id/richiesta_image"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:id="@+id/richiesta_nome"/>



        <TextView
            android:layout_toRightOf="@id/richiesta_image"
            android:layout_below="@id/richiesta_nome"
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            android:layout_height="match_parent"
            android:textColor="#000"
            android:textStyle="normal"
            android:textSize="@dimen/abc_text_size_medium_material"
            android:id="@+id/titolo_richiesta"/>

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="@dimen/abc_text_size_small_material"
            android:textColor="#000"
            android:layout_alignTop="@id/richiesta_nome"
            android:layout_alignRight="@id/richiesta_nome"
            android:textStyle="normal"
            android:id="@+id/data_entro"/>





    </RelativeLayout>








</android.support.v7.widget.CardView>