<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="it.polimi.mobilecourse.expenses.NuovaPrenotazioneActivity"
    >


    <TextView
        android:id="@+id/tutor_selezionato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_awesome_toolbar"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/data_scelta"
        android:layout_below="@id/tutor_selezionato"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Inserire una data"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ora_scelta"
        android:text="Inserire orario"
        android:layout_below="@+id/data_scelta"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="38dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ora_scelta_button"
        android:text="Click per selezionare l'ora"
        android:layout_alignBaseline="@+id/button_materia"
        android:layout_alignBottom="@+id/button_materia" ></Button>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@id/button_materia"
        android:layout_below="@+id/ora_scelta"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="47dp"
        android:text="materia" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/cellulare_nuova_prenotaz"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:hint="Cellulare" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/button_conferma_prenotazione"
        android:text="Conferma Prenotazione"/>


</RelativeLayout>
