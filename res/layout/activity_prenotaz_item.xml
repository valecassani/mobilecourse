<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="it.polimi.mobilecourse.expenses.NuovaPrenotazioneActivity"
    android:id="@+id/">


    <TextView
        android:id="@+id/tutor_selezionato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/data_scelta"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:layout_width="200dp"
        android:text="Inserire una data"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="89dp"
        android:layout_below="@+id/prenot_tutor_name" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"

        android:id="@+id/ora_scelta"
        android:text="Inserire orario"
        android:layout_alignBottom="@id/ora_scelta_button"
        android:layout_alignRight="@+id/imagePrenotTutor" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/ora_scelta_button"
        android:text="Orario"
        android:layout_above="@+id/cellulare_nuova_prenotaz"
        android:layout_alignLeft="@+id/button_data" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/button_materia"
        android:text="materia"
        android:layout_alignTop="@+id/prenot_tutor_name"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/cellulare_nuova_prenotaz"
        android:hint="Cellulare"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Conferma Prenotazione"
        android:id="@+id/button_conferma_prenotazione"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/primaryColorDark"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true"/>



    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagePrenotTutor"
        android:layout_above="@+id/data_scelta"
        android:layout_alignLeft="@+id/tutor_selezionato" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/prenot_tutor_name"
        android:layout_alignTop="@+id/tutor_selezionato"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_data"
        android:text="Data"
        android:layout_alignTop="@+id/data_scelta"
        android:layout_alignLeft="@+id/prenot_tutor_name" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aggiorna Prenotazione"
        android:id="@+id/button_aggiorna_prenotazione"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp"
        style="?android:attr/borderlessButtonStyle"
        android:background="@color/primaryColorDark"
        android:layout_above="@id/button_conferma_prenotazione"/>


</RelativeLayout>
