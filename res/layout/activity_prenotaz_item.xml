<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="it.polimi.mobilecourse.expenses.NuovaPrenotazioneActivity"
    >


    <TextView
        android:id="@+id/tutor_selezionato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_awesome_toolbar"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/data_scelta"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Inserire una data"
        android:layout_above="@+id/ora_scelta"
        android:layout_alignLeft="@+id/ora_scelta"
        android:layout_marginBottom="29dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ora_scelta"
        android:text="Inserire orario"
        android:layout_alignTop="@+id/ora_scelta_button"
        android:layout_alignLeft="@+id/cellulare_nuova_prenotaz" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ora_scelta_button"
        android:text="Orario"
        android:layout_above="@id/button_materia"
        android:layout_alignParentRight="true"></Button>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@id/button_materia"
        android:text="materia"
        android:layout_above="@+id/cellulare_nuova_prenotaz"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="53dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/cellulare_nuova_prenotaz"
        android:hint="Cellulare"
        android:layout_above="@+id/button_conferma_prenotazione"
        android:layout_alignLeft="@+id/tutor_selezionato"
        android:layout_marginBottom="103dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_conferma_prenotazione"
        android:text="Conferma Prenotazione"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentLeft="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imagePrenotTutor"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/data_scelta" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/prenot_tutor_name"
        android:layout_alignTop="@+id/tutor_selezionato"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/prenot_tutor_name"
        android:layout_alignLeft="@+id/prenot_tutor_name" />


</RelativeLayout>
