<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="840dp"
            >

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:hint="@string/nome"
                android:id="@+id/nameS"
                android:layout_alignParentTop="true"
                android:layout_marginTop="45dp"
                android:layout_marginLeft="20dp"
                />

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/cognome"
                android:ems="10"
                android:id="@+id/surnameS"
                android:layout_alignTop="@+id/nameS"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="0dp"
                android:layout_gravity="right"
                android:layout_weight="0.04"/>

            <EditText
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="@string/address"
                android:id="@+id/addressS"


                android:layout_below="@+id/etaS"
                android:layout_centerHorizontal="true" />



            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/cellS"
                android:hint="@string/cell"
                android:layout_below="@+id/nameS"
                android:layout_toRightOf="@+id/textView6"
                android:layout_marginTop="57dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerCitta"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"
                android:spinnerMode="dialog"
                android:layout_above="@+id/textView6"
                android:layout_alignRight="@+id/surnameS" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerUni"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"


                android:spinnerMode="dialog"
                android:clickable="true"
                android:layout_above="@+id/editTextFac"
                android:layout_alignRight="@+id/surnameS" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/citta"
                android:id="@+id/textView5"
                android:layout_alignTop="@+id/spinnerCitta"
                android:layout_alignLeft="@+id/nameS"
                android:layout_marginTop="-40dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/uni"
                android:id="@+id/textView6"
                android:layout_above="@+id/spinnerUni"
                android:layout_alignRight="@+id/textView5" />



            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/save"
                android:id="@+id/updateS"
                android:layout_marginBottom="84dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true" />



            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarS"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_alignBottom="@+id/updateS"
                android:layout_alignLeft="@+id/updateS" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"

                android:id="@+id/editTextFac"
                android:text="@string/fac"
                android:layout_above="@+id/spinnerFac"
                android:layout_alignLeft="@+id/textView5" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerFac"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"


                android:spinnerMode="dialog"
                android:clickable="true"
                android:layout_above="@+id/updateS"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="87dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:hint="@string/eta"
                android:ems="10"
                android:id="@+id/etaS"
                android:layout_below="@+id/cellS"
                android:layout_alignLeft="@+id/cellS" />


        </RelativeLayout>
    </LinearLayout>

</ScrollView>