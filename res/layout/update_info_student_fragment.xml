<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:float="http://schemas.android.com/apk/res-auto">


    <LinearLayout android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"

        android:weightSum="1">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="930dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="959dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:weightSum="1"
                android:id="@+id/linearLayout4"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="90dp">

                    <EditText
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"

                        android:inputType="text"
                        android:hint="Nome"
                        android:id="@+id/nameS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-59dp"
                    android:layout_marginRight="-100dp">

                    <EditText
                        android:layout_width="165dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:inputType="text"
                        android:hint="Cognome"
                        android:id="@+id/surnameS"
                        android:layout_marginLeft="190dp"
                        android:layout_marginTop="-43dp" />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>




                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/user_48"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">


                </ImageView>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:inputType="number"
                        android:hint="EtÃ "
                        android:id="@+id/etaS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/map_marker_32"
                        android:inputType="text"
                        android:hint="Indirizzo"
                        android:id="@+id/addressS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>



                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    float:fletPaddingLeft="10dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">

                    <EditText
                        android:layout_width="276dp"
                        android:layout_height="wrap_content"

                        android:drawablePadding="5dp"
                        android:drawableLeft="@drawable/mobile_32"
                        android:inputType="phone"
                        android:hint="Cellulare"
                        android:id="@+id/cellS"
                        />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/school_48"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp">


                </ImageView>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/citta"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/textView5"

                    android:layout_marginTop="10dp" />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerCitta"
                    android:saveEnabled="true"
                    android:drawSelectorOnTop="true"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="10dp"

                    />

                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/uni"
                    android:textColor="@color/primaryColor"
                android:id="@+id/textView6"
                    android:layout_marginTop="20dp"

                    />



                <Spinner
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/spinnerUni"
                android:saveEnabled="true"
                android:drawSelectorOnTop="true"


                android:spinnerMode="dialog"
                android:clickable="true"
                    android:layout_marginTop="10dp"
                   />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/primaryColor"
                    android:id="@+id/editTextFac"
                    android:text="@string/fac"
                    android:layout_marginTop="20dp"
                   />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerFac"
                    android:saveEnabled="true"
                    android:drawSelectorOnTop="true"


                    android:spinnerMode="dialog"
                    android:clickable="true"
                    android:layout_above="@+id/updateS"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"

                    />

                <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/save"
                android:id="@+id/updateS"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:background="@drawable/smooth_button"
                android:layout_marginBottom="84dp"
                    android:layout_marginTop="100dp"
                    android:layout_gravity="center_horizontal" />



            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progressBarS"
                android:visibility="gone"
                style="?android:attr/progressBarStyleLarge"
                android:layout_alignBottom="@+id/updateS"
                android:layout_alignLeft="@+id/updateS"
                android:layout_gravity="center"
                android:layout_marginTop="-400dp" />


            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>