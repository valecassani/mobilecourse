<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:float="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:weightSum="1">

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    float:fletPaddingLeft="10dp">

                    <EditText
                        android:id="@+id/titleRichiestaMR"
                        android:layout_width="276dp"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/title_32"
                        android:drawablePadding="5dp"
                        android:hint="Titolo della richiesta"
                        android:inputType="text" />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>

                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    float:fletPaddingLeft="10dp">

                    <EditText
                        android:id="@+id/testoRichiestaMR"
                        android:layout_width="276dp"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/text_32"
                        android:drawablePadding="5dp"
                        android:hint="Testo della richiesta"
                        android:inputType="textMultiLine" />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                <com.wrapp.floatlabelededittext.FloatLabeledEditText
                    android:layout_width="295dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="30dp"
                    float:fletPaddingLeft="10dp">

                    <EditText
                        android:id="@+id/dataMR"
                        android:layout_width="276dp"

                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/calendar_32"
                        android:drawablePadding="5dp"
                        android:hint="Data"
                        android:inputType="text" />


                </com.wrapp.floatlabelededittext.FloatLabeledEditText>


                <Button
                    android:id="@+id/buttonImageMR"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_marginBottom="-50dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/smooth_button"
                    android:text="@string/caricaimmagine"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/buttonPhotoMR"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView27"
                    android:layout_gravity="right"
                    android:background="@drawable/smooth_button"
                    android:text="@string/scattaphoto"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView27"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="-10dp"
                    android:layout_marginTop="-30dp"
                    android:text="@string/or"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <TextView
                    android:id="@+id/fotoTestoMR"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/buttonPhotoMR"
                    android:layout_marginTop="38dp"
                    android:text="@string/photo"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <ImageButton
                    android:id="@+id/fotoRichiestaMR"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_below="@+id/buttonImageMR"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:adjustViewBounds="true"
                     />


                <ProgressBar
                    android:id="@+id/progressBarMR"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_toLeftOf="@+id/buttonImageMR"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/buttonSave"
                    style="?android:attr/borderlessButtonStyle"
                    android:layout_width="338dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/linearLayout4"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center_horizontal|bottom"
                    android:layout_marginTop="27dp"
                    android:background="@drawable/smooth_button"
                    android:text="@string/saveedit"
                    android:textColor="@color/white"
                    android:textStyle="bold" />


            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>