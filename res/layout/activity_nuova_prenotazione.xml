<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:fitsSystemWindows="true"
    tools:context="it.polimi.mobilecourse.expenses.NuovaPrenotazioneActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_awesome_toolbar"

        android:layout_height="56dp"
        android:layout_width="match_parent"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        >

    </android.support.v7.widget.Toolbar>

    <TextView android:text="Nuova Prenotazione" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tutor_selezionato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_awesome_toolbar"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/data_scelta"
        android:layout_below="@id/tutor_selezionato"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Inserire una data"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ora_scelta"
        android:layout_below="@id/data_scelta"
        android:text="Inserire orario"/>

    <Button
        android:id="@+id/button_prenotazione"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invia prenotazione"/>




</RelativeLayout>
