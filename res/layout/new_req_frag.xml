<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"


    >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
  >

    <EditText
        android:id="@+id/titoloRichiesta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:maxLength="35"
        android:hint="Titolo della Richiesta"
        android:layout_below="@id/my_awesome_toolbar"
        android:textStyle="bold"/>



    <EditText
        android:id="@+id/testoRichiesta"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:hint="Testo della Richiesta"
        android:layout_below="@id/titoloRichiesta"/>

    <EditText
        android:id="@+id/dataEntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:ems="10"
        android:hint="Inserire una data"
        android:inputType="date"
        android:layout_below="@id/testoRichiesta"/>

    <Button
        android:id="@+id/buttonImage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Carica Immagine"
        android:layout_below="@+id/dataEntro"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="22dp"></Button>
    <Button
        android:id="@+id/buttonPhoto"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Scatta Foto"
        android:layout_alignTop="@+id/buttonImage"
        android:layout_alignLeft="@+id/anteprima_immagine"></Button>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:id="@+id/anteprima_immagine"
        android:layout_alignBottom="@+id/buttonPhoto"
        android:layout_toRightOf="@+id/buttonImage"
        android:layout_marginLeft="87dp"
        android:layout_below="@+id/buttonImage" />

    <Button
        android:id="@+id/buttonSendRich"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_blue_500"
        android:text="Invia"
        android:textColor="#FFF"
        android:layout_below="@+id/anteprima_immagine"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="oppure"
        android:id="@+id/textView27"
        android:layout_alignBaseline="@+id/buttonImage"
        android:layout_alignBottom="@+id/buttonImage"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

    </ScrollView>