<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    android:orientation="vertical">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/linearLayout"

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <ScrollView
                        android:id="@+id/container"

                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"


                        >


                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:fillViewport="true"
                            android:fitsSystemWindows="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/user_128"
                                android:alpha="0.3"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>


                            <com.pkmmte.view.CircularImageView

                                android:id="@+id/foto"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_centerHorizontal="true" />


                            <TextView
                                android:id="@+id/tutor_nome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/foto"
                                android:layout_below="@id/foto"
                                android:layout_centerHorizontal="true"
                                android:layout_marginLeft="140dp"
                                android:layout_marginRight="28dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/tutor_citta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tutor_nome"
                                android:layout_centerHorizontal="true"
                                android:textAppearance="?android:attr/textAppearanceMedium"

                                />


                            <TextView
                                android:id="@+id/tutor_eta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/tutor_nome"

                                android:layout_below="@+id/tutor_nome"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="32dp"
                                android:textAppearance="?android:attr/textAppearanceMedium" />

                            <TextView
                                android:id="@+id/tutor_textv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/tutor_occupazione"
                                android:layout_below="@+id/tutor_eta"
                                android:layout_marginTop="28dp"

                                android:text="Occupazione"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tutor_occupazione"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tutor_textv"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"

                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/textViewespuni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tutor_occupazione"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"
                                android:layout_marginTop="5dp"
                                android:text="Esperienze da tutor:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/primaryColor"


                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tutor_esptutor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textViewespuni"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"

                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/textv2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tutor_esptutor"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"
                                android:layout_marginTop="5dp"
                                android:text="Esperienze universitarie:"
                                android:textAppearance="?android:attr/textAppearanceMedium"

                                android:textColor="@color/primaryColor"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tutor_espuni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textv2"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"


                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/textv3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tutor_espuni"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"
                                android:layout_marginTop="5dp"
                                android:text="Università:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/primaryColor"


                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tutor_uni"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textv3"

                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"

                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <TextView
                                android:id="@+id/textv4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tutor_uni"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"

                                android:layout_marginTop="5dp"
                                android:text="Facoltà:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/primaryColor"

                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tutor_fac"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/textv4"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"

                                android:textAppearance="?android:attr/textAppearanceSmall" />

                            <ProgressBar
                                android:id="@+id/progressBarTut"
                                style="?android:attr/progressBarStyleLarge"
                                android:layout_width="wrap_content"

                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tutor_citta"
                                android:layout_toRightOf="@+id/checkBoxgroup"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textViewlez"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tutor_fac"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="28dp"

                                android:layout_marginTop="5dp"
                                android:text="Caratteristiche lezioni:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold" />

                            <CheckBox
                                android:id="@+id/checkBoxgroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/tutor_fac"
                                android:layout_below="@+id/textViewlez"
                                android:checked="false"
                                android:clickable="false"
                                android:text="Lezioni di gruppo" />

                            <CheckBox
                                android:id="@+id/checkBoxgratis"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/checkBoxgroup"
                                android:layout_below="@+id/checkBoxgroup"

                                android:checked="false"
                                android:clickable="false"
                                android:text="Prima lezione gratis" />

                            <CheckBox
                                android:id="@+id/checkBoxdom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/checkBoxgratis"
                                android:layout_below="@+id/checkBoxgratis"

                                android:checked="false"
                                android:clickable="false"
                                android:text="Lezioni a domicilio" />

                            <CheckBox
                                android:id="@+id/checkBoxsede"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/checkBoxdom"
                                android:layout_below="@+id/checkBoxdom"

                                android:checked="false"
                                android:clickable="false"
                                android:text="Lezioni in sede propria" />

                            <TextView
                                android:id="@+id/distText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/checkBoxsede"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="5dp"
                                android:text="Distanza:"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:textColor="@color/primaryColor"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/distText"


                                android:layout_marginLeft="5dp"
                                android:textAppearance="?android:attr/textAppearanceSmall" />


                            <Button
                                android:id="@+id/prenotaz_button"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_below="@id/distance"
                                android:layout_centerHorizontal="true"
                                android:layout_margin="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/smooth_button"
                                android:drawableLeft="@drawable/handshake_24"
                                android:drawablePadding="-40sp"
                                android:paddingLeft="40dp"
                                android:text="Vai a prenotazione"
                                android:textColor="#FFF" />


                        </RelativeLayout>
                    </ScrollView>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <ScrollView
                        android:id="@+id/container3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"


                        android:layout_weight="0.20">


                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:minHeight="450dp"
                            android:layout_height="wrap_content"
                            android:fitsSystemWindows="true">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/star_128"
                                android:alpha="0.3"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>

                            <ListView
                                android:id="@+id/rec_tutor"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:choiceMode="singleChoice"
                                android:dividerHeight="1dp" />

                            <TextView
                                android:id="@+id/norec"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentTop="true"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="137dp"
                                android:text="Nessuna recensione inserita"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:visibility="invisible" />


                            <Button
                                android:id="@+id/buttonNewRec"
                                style="?android:attr/borderlessButtonStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_below="@id/rec_tutor"
                                android:layout_centerHorizontal="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="205dp"
                                android:background="@drawable/smooth_button"
                                android:text="+ Nuova Recensione"
                                android:textColor="#FFF" />


                        </RelativeLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"

                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ScrollView
                        android:id="@+id/container2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        >



                        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fitsSystemWindows="true">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/book_128"
                                android:alpha="0.3"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true"/>




                            <ListView
                                android:id="@+id/mat_tutor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:choiceMode="singleChoice"
                                android:dividerHeight="1dp"/>

                            <TextView
                                android:id="@+id/nomat"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mat_tutor"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="93dp"
                                android:text="Nessuna materia trovata"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:visibility="invisible" />

                        </RelativeLayout>
                    </ScrollView>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>
    </TabHost>
</LinearLayout>