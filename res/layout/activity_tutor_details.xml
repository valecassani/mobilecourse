<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tutor_cognome"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignRight="@+id/map" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tutor_nome"
        android:layout_marginTop="15dp"
        android:layout_toRightOf="@+id/imageView"
        android:layout_below="@id/tutor_cognome"
        android:layout_alignRight="@+id/map" />

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tutor_details_subjects"
        android:layout_above="@+id/map"
        android:layout_alignLeft="@+id/map" />

    <com.gc.materialdesign.views.ButtonFlat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/prenotaz_button"
        android:text="Vai a prenotazione"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"/>

      <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@id/imageView"
        android:layout_alignTop="@+id/search_tutor_name"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/search_tutor_name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/search_tutor_surname"
        android:layout_alignLeft="@id/search_tutor_surname"
        android:layout_marginLeft="300dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/search_tutor_surname"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginLeft="300dp"

  />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_materie_tutor"
        android:layout_above ="@id/map"
        android:layout_below="@id/tutor_nome"/>





</RelativeLayout>