<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tutor_nome"
        android:layout_margin="15dp"
        android:layout_alignLeft="@+id/tutor_details_subjects"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="false" />

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:name="com.google.android.gms.maps.MapFragment"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/tutor_details_subjects"
        android:layout_above="@+id/map"
        android:layout_alignLeft="@+id/map" />

    <com.gc.materialdesign.views.ButtonFlat
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/prenotaz_button"
        android:text="Vai a prenotazione"
        android:layout_alignParentBottom="true"
        android:layout_margin="15dp"/>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tutor_nome"
        android:layout_alignLeft="@+id/tutor_details_subjects" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/search_tutor_name"
        android:layout_toRightOf="@+id/textView27" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/search_tutor_name"
        android:layout_below="@+id/search_tutor_surname"
        android:layout_alignLeft="@id/search_tutor_surname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@id/search_tutor_surname"
        android:layout_below="@+id/textView27"
        android:layout_alignRight="@+id/tutor_nome" />


</RelativeLayout>