<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#083413" />
            <gradient android:angle="-90" android:startColor="#083413" android:endColor="#083413"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"  android:color="#083413"/>
            <solid android:color="#083413"></solid>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#556b2f" />
            <gradient android:angle="-45" android:startColor="#01796f" android:endColor="#01796f" />
        </shape>
    </item>
</selector>