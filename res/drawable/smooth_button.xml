<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="@color/primaryColorDark" />
            <gradient android:angle="-90" android:startColor="@color/primaryColorDark" android:endColor="@color/primaryColorDark"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip"  android:color="@color/primaryColorDark"/>
            <solid android:color="@color/primaryColorDark"></solid>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="@color/primaryColorDark" />
            <gradient android:angle="-45" android:startColor="@color/primaryColorDark" android:endColor="@color/primaryColorDark" />
        </shape>
    </item>
</selector>