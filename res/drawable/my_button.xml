<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f729b" />
            <gradient android:angle="-90" android:startColor="#3f729b" android:endColor="#3f729b"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#3f729b" />
            <solid android:color="#3f729b"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="9dip" />
            <stroke android:width="1dip" android:color="#3f729b" />
            <gradient android:angle="-45" android:startColor="#3f729b" android:endColor="#3f729b" />
        </shape>
    </item>
</selector>